{
    "root": true,
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "next",
        "next/core-web-vitals"
    ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "object-property-newline": [
            "error",
            {
                "allowAllPropertiesOnSameLine": false,
            }
        ],
        "react/jsx-max-props-per-line": [
            "error",
            {
                "maximum": 1,
                "when": "always"
            }
        ],
        "no-undef": ["off"],
        "no-unused-vars": ["off"],
    }
}